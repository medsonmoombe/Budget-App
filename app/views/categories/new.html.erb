<%= form_with model: @category, url: user_categories_path,local: true, data: {turbo:false}  do |form| %>
    <div>
      <%= form.text_field :name, class: "form-control w-100", placeholder: "Name" %>
    </div>
  
    <div>
      <%= form.text_field :icon, class: "form-control w-100", placeholder: "Icon" %>
    </div>
  
    <div class="text-center m-3">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
    <% if @category.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@category.errors.count, "error") %> prohibited this group from being saved:</h2>
  
        <ul>
          <% @category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>